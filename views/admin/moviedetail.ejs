<%- include('../_partials/_header'); -%>

<div class="row">
    <div class="col-md-6">
        <h2>Title</h2>
        <h3><%= post.title %></h3>
    </div>
</div>


<div class="row">
   <div class="col-md-12">
       <div class="panel panel-default">
          <div class="panel-body">
             Description:<br>
              <%= post.description %><br><br>
              Price:<br>
              <p>$<%= post.price %> per ticket</p>
              Actors:
              <p><%= post.actors %></p>
              Available Times:
              <p><%= post.listedtimes %>pm</p>
              <p><a href="edit/<%= post._id %>" class="btn btn-primary" role="button">Edit</a></p>
              <p><a href="/admin" class="btn btn-primary" role="button">Back</a></p>
          </div>
       </div>
   </div>
</div>


<%- include ('../_partials/_footer'); -%>