<%- include ("../_partials/_header.ejs"); %>
 
<div class="row">
    <div class="col-md-6">
        <h1>Edit Movie</h1>
    </div>
</div>
 
<div class="row">
    <div class="col-md-6">
        <form action="/admin/update" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputTitle">Title</label>
                <input type="text" class="form-control" placeholder="Title" id="inputTitle" name="title" value=<%= post.title%>>
            </div>
 
            <div class="form-group">
                <label for="inputDescription">Decription</label>
                <textarea class="form-control" rows="3" id="inputDescription" placeholder="Description" name="description"> <%=post.description%></textarea>
            </div>
            
            <div class="form-group">
                <label for="inputDescription">Year Released</label>
                <input type="text" class="form-control" id="inputyearReleased" placeholder="Year Released" name="yearReleased" value=<%= post.yearReleased%>></textarea>
            </div>
            
            <div class="form-group">
                <label for="inputDescription">Actors(seperate by commas)</label>
                <input type="text" class="form-control" rows="3" id="inputContent" placeholder="Actors" name="actors" value=<%= post.actors%>></textarea>
            </div>
            <div class="form-group">
                <label for="inputDescription">Price</label>
                <input type="text" class="form-control" id="price" placeholder="Price" name="price" value=<%= post.price%>></textarea>
            </div>
            <div class="form-group">
                <label for="inputDescription">Listed Times(seperatre by commas)</label>
                <input type="text" class="form-control" id="listedTimes" placeholder="Times" name="listedtimes" value=<%= post.listedtimes%>></textarea>
            </div>
            <input type="hidden" id="postid" name="postid" value=<%=post._id%>></input>
            <div class="form-group">
                <input type="file" name="image">
            </div>
            <div class="form-group">
                <button type="Submit" class="btn btn-default" href="#" role="button">Submit Changes</button>
                
            </div>
    </div>
 
    </form>
</div>
 
