<%- include ("../_partials/_header.ejs"); %>
 
<div class="row">
    <div class="col-md-6">
        <h1>New Movie</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6" style="margin-bottom:10px;">
        <a href="/admin/addMovie" type="button" class="btn btn-default">Add Movie</a>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h1>Movies posted</h1>
    </div>
</div>
 
<% post.forEach(function(post) { %>
    <div class="row"><div class="col-sm-4 col-md-offset-3">
        <div class="thumbnail">
            <% if(post.image != null){%>
                <img src="<%= "/" + post.image %>"
                    alt="logo"
                    style="height:200px;width:px;display:block">
            <%}else{%>
                <img src="data:image/svg+xml;base64,"
                    alt="logo"
                    style="height:200px;width:px;display:block">
            <%}%>
            <div class="caption">
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <p>$<%= post.price %> per ticket</p>
                <p><%= post.actors %></p>
                <p><%= post.listedtimes %>pm</p>
                <p><a href="/admin/<%= post._id %>" class="btn btn-primary" role="button">Read</a>
                   <a href="admin/edit/<%= post._id %>" class="btn btn-default" role="button">Edit</a></p>
            </div>
        </div>
    </div>
<% }) %></div>
    
 
<%- include ("../_partials/_footer.ejs"); %>